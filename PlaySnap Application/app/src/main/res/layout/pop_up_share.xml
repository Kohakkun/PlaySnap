<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_button"
    app:cardCornerRadius="10dp"
    android:id="@+id/sharelink_card">

        <ImageButton
            android:id="@+id/x_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/silang"
            android:backgroundTint="@color/maroon_red"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:layout_marginVertical="5dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/share_just_link_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:background="@drawable/bg_outlined_category_rec_page"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="10dp">
            <TextView
                android:id="@+id/link_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/leaguespartanregular"
                android:text="https://playsnap.app/game/lompat-tali"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageButton
                android:id="@+id/copy_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_content_copy_24"
                app:layout_constraintStart_toEndOf="@id/link_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/dark_blue" />
        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>