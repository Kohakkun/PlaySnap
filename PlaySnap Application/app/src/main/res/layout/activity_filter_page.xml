<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".FilterPageActivity">

    <ImageView
        android:id="@+id/balokKayuMidFilterPage"
        android:layout_width="85dp"
        android:layout_height="95dp"
        android:background="@drawable/ic_balok_kayu"
        android:scaleX="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.608" />
    <ImageView
        android:id="@+id/batuRumputMidFilterPage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_batu_rumput"
        android:scaleX="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62" />

    <include
        layout="@layout/bottom_sheet_filter_page"/>


    <include
        android:id="@id/include"
        layout="@layout/activity_navigation_bar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="164dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/back_button"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="37dp"
        android:fontFamily="@font/leaguespartanextrabold"
        android:text="@string/tv_filter_title"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_filter_subtitle"
        style="@style/Subtitle"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:paddingHorizontal="75dp"
        android:text="@string/tv_filter_subtitle"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/tv_filter_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_filter_title" />

    <ImageView
        android:id="@+id/awanTopFilterPage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/ic_awan2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/balonTopFilterPage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/ic_balin_merah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/maskotTopFilterPage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/ic_maskot_left_smile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/awanTopFilterPage2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/ic_awan2"
        android:scaleX="-1"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_usia_main"
        style="@style/ButtonWhite2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="164dp"
        android:clickable="false"
        android:paddingBottom="60dp"
        android:fontFamily="@font/leaguespartanbold"
        android:shadowColor="@color/light_grey"
        android:shadowDx="0"
        android:shadowDy="100"
        android:shadowRadius="100"
        android:text="@string/filter_usia_main_btn_text"
        android:textColor="@color/light_grey"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_dinamic_usia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_small_rectangle_dinamic"
        android:text="-"
        android:fontFamily="@font/andikabold"
        android:textColor="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="@+id/btn_usia_main"
        app:layout_constraintTop_toTopOf="@+id/btn_usia_main" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_pemain_main"
        style="@style/ButtonWhite2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="284dp"
        android:clickable="false"
        android:fontFamily="@font/leaguespartanbold"
        android:paddingBottom="60dp"
        android:shadowColor="@color/light_grey"
        android:shadowDx="0"
        android:shadowDy="100"
        android:shadowRadius="100"
        android:text="@string/filter_pemain_main_btn_text"
        android:textColor="@color/light_grey"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_dinamic_pemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_small_rectangle_dinamic"
        android:clickable="false"
        android:fontFamily="@font/andikabold"
        android:text="-"
        android:textColor="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="@+id/btn_pemain_main"
        app:layout_constraintTop_toTopOf="@+id/btn_pemain_main" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_lokasi_main"
        style="@style/ButtonWhite2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="164dp"
        android:clickable="false"
        android:fontFamily="@font/leaguespartanbold"
        android:paddingBottom="60dp"
        android:shadowColor="@color/light_grey"
        android:shadowDx="0"
        android:shadowDy="100"
        android:shadowRadius="100"
        android:text="@string/filter_lokasi_main_btn_text"
        android:textColor="@color/light_grey"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_dinamic_lokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_small_rectangle_dinamic"
        android:clickable="false"
        android:fontFamily="@font/andikabold"
        android:text="-"
        android:textColor="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="@+id/btn_lokasi_main"
        app:layout_constraintTop_toTopOf="@+id/btn_lokasi_main" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_properti_main"
        style="@style/ButtonWhite2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="284dp"
        android:clickable="false"
        android:fontFamily="@font/leaguespartanbold"
        android:paddingBottom="60dp"
        android:shadowColor="@color/light_grey"
        android:shadowDx="0"
        android:shadowDy="100"
        android:shadowRadius="100"
        android:text="@string/filter_properti_main_btn_text"
        android:textColor="@color/light_grey"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_dinamic_properti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_small_rectangle_dinamic"
        android:clickable="false"
        android:fontFamily="@font/andikabold"
        android:text="-"
        android:textColor="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="@+id/btn_properti_main"
        app:layout_constraintTop_toTopOf="@+id/btn_properti_main" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="467dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mulai_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mulai_button_oultline"
        android:text="@string/mulai_btn_text"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.966" />

</androidx.constraintlayout.widget.ConstraintLayout>
