<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".ui.filter.FilterFragment">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/back_button"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_filter_title"
        android:fontFamily="@font/leaguespartanbold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter Permainan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mulai_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mulai_button_oultline"
        android:text="@string/mulai_btn_text"
        android:textColor="@color/white"
        android:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/section_properti_main"/>

    <TextView
        android:id="@+id/tv_filter_subtitle"
        style="@style/Subtitle"
        android:layout_width="277dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="@string/tv_filter_subtitle"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_filter_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/maskot_awan_image_atas"
        android:layout_width="120dp"
        android:layout_height="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="295dp"
        android:layout_marginTop="65dp">

        <ImageView
            android:id="@+id/matahariTopFilterPage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/ic_sun"
            android:layout_marginTop="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@id/awanTopFilterPage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/ic_awan2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/maskot_awan_image"
        android:layout_width="120dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleX="-1"
        android:layout_marginEnd="320dp"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/awanTopFilterPage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/ic_awan2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/balonTopFilterPage"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="54dp"
            android:background="@drawable/ic_balon_warna_warni"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />/

        <ImageView
            android:id="@+id/maskotTopFilterPage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="41dp"
            android:background="@drawable/ic_maskot_left_smile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/awanTopFilterPage2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/ic_awan2"
            android:scaleX="-1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="-9dp"
            tools:layout_editor_absoluteY="70dp" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/kupu_kupu_filter_page1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:rotation="45"
        android:background="@drawable/butterfly_full_body"
        app:layout_constraintEnd_toStartOf="@id/tv_filter_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/kupu_kupu_filter_page2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:rotation="-45"
        android:background="@drawable/butterfly_full_body2"
        app:layout_constraintStart_toEndOf="@id/mulai_button"
        app:layout_constraintBottom_toBottomOf="@id/mulai_button"
        android:layout_marginBottom="50dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section_usia_main"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="180dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_rating_feedback"/>
        <ImageView
            android:id="@+id/usia_section_blue_dinamic"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/background_rating_feedback"
            android:backgroundTint="@color/light_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/usia_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="USIA"
            android:fontFamily="@font/leaguespartanbold"
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/usia_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:fontFamily="@font/andikaregular"
            android:textColor="@color/grey"
            app:layout_constraintStart_toStartOf="@id/usia_section_blue_dinamic"
            app:layout_constraintEnd_toEndOf="@id/usia_section_blue_dinamic"
            app:layout_constraintTop_toTopOf="@id/usia_section_blue_dinamic"
            app:layout_constraintBottom_toBottomOf="@id/usia_section_blue_dinamic"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section_lokasi_main"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="70dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_rating_feedback"/>
        <ImageView
            android:id="@+id/lokasi_section_blue_dinamic"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/background_rating_feedback"
            android:backgroundTint="@color/light_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/lokasi_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="LOKASI"
            android:fontFamily="@font/leaguespartanbold"
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/lokasi_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:fontFamily="@font/andikaregular"
            android:textColor="@color/grey"
            app:layout_constraintStart_toStartOf="@id/lokasi_section_blue_dinamic"
            app:layout_constraintEnd_toEndOf="@id/lokasi_section_blue_dinamic"
            app:layout_constraintTop_toTopOf="@id/lokasi_section_blue_dinamic"
            app:layout_constraintBottom_toBottomOf="@id/lokasi_section_blue_dinamic"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section_pemain_main"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="70dp"
        app:layout_constraintTop_toBottomOf="@id/section_usia_main">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_rating_feedback"/>
        <ImageView
            android:id="@+id/pemain_section_blue_dinamic"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/background_rating_feedback"
            android:backgroundTint="@color/light_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/pemain_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="PEMAIN"
            android:fontFamily="@font/leaguespartanbold"
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/pemain_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:fontFamily="@font/andikaregular"
            android:textColor="@color/grey"
            app:layout_constraintStart_toStartOf="@id/pemain_section_blue_dinamic"
            app:layout_constraintEnd_toEndOf="@id/pemain_section_blue_dinamic"
            app:layout_constraintTop_toTopOf="@id/pemain_section_blue_dinamic"
            app:layout_constraintBottom_toBottomOf="@id/pemain_section_blue_dinamic"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section_properti_main"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="70dp"
        app:layout_constraintTop_toBottomOf="@id/section_usia_main">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_rating_feedback"/>
        <ImageView
            android:id="@+id/properti_section_blue_dinamic"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/background_rating_feedback"
            android:backgroundTint="@color/light_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/properti_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="PROPERTI"
            android:fontFamily="@font/leaguespartanbold"
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/properti_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:fontFamily="@font/andikaregular"
            android:textColor="@color/grey"
            app:layout_constraintStart_toStartOf="@id/properti_section_blue_dinamic"
            app:layout_constraintEnd_toEndOf="@id/properti_section_blue_dinamic"
            app:layout_constraintTop_toTopOf="@id/properti_section_blue_dinamic"
            app:layout_constraintBottom_toBottomOf="@id/properti_section_blue_dinamic"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="250dp" />


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottom_sheet_filter_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/bottom_sheet_filter_page_id"
            layout="@layout/bottom_sheet_filter_page" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

