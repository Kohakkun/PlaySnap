<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaySnapUI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Theme.PlaySnapUI" parent="Base.Theme.PlaySnapUI" />

    <style name="Theme.PlaySnapUI.Splash.Test" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/sky_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_field</item>
        <item name="postSplashScreenTheme">@style/Theme.PlaySnapUI</item>
    </style>

    <style name="Theme.PlaySnapUI.Splash" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="ButtonWhite">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/andikabold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonWhite2">
        <item name="android:background">@drawable/bg_button_corner</item>
        <item name="android:fontFamily">@font/andikabold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonBlue">
        <item name="android:background">@drawable/bg_button_blue</item>
        <item name="android:fontFamily">@font/andikabold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonBack">
        <item name="android:background">@drawable/bg_button_back</item>
    </style>

    <style name="ButtonNavbar">
        <item name="android:background">@color/orange</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/leaguespartanextrabold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="TitleGame">
        <item name="android:fontFamily">@font/leaguespartanextrabold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Subtitle">
        <item name="android:fontFamily">@font/andikaregular</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/grey</item>
        <item name="hintTextColor">@color/light_grey</item>
        <item name="startIconTint">@color/dark_blue</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="background">@color/white</item>
    </style>

    <style name="TextInputLayout2" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="background">@color/white</item>
    </style>
    
    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/bg_text_field</item>
        <item name="fontFamily">@font/andikaregular</item>
    </style>
    
    <style name="TextInputEditText_search" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="fontFamily">@font/andikaregular</item>
    </style>

    <style name="BottomNote">
        <item name="android:fontFamily">@font/andikaregular</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="EditText">
        <item name="fontFamily">@font/andikaregular</item>
    </style>

    <style name="TransparentTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CircularShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Makes it a circle -->
    </style>

</resources>